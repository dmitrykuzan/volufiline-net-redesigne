<section class="before-after-slider page-width section-melatonin" id="VideoSlider{{ section.id }}">
  <div class="before-after-slider__content-wrapper">
    <div class="before-after-slider__titles">
      <h2 class="section-title-volufiline">Our customers love it.</h2>

      <div class="hero__review">
        <div class="volufiline-rating-stars">
          {% for _ in (1..5) %}
          <span class="volufiline-rating-star">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 122.88 117.1">
              <path fill="#C98A3A" class="cls-1" d="M64.42,2,80.13,38.7,120,42.26a3.2,3.2,0,0,1,1.82,5.62h0L91.64,74.18l8.9,39A3.19,3.19,0,0,1,98.12,117a3.27,3.27,0,0,1-2.46-.46L61.41,96.1,27.07,116.64a3.18,3.18,0,0,1-4.38-1.09,3.14,3.14,0,0,1-.37-2.38h0l8.91-39L1.09,47.88a3.24,3.24,0,0,1-.32-4.52,3.32,3.32,0,0,1,2.29-1l39.72-3.56L58.49,2a3.24,3.24,0,0,1,5.93,0Z"/>
            </svg>
          </span>
          {% endfor %}
        </div>
        <p>5,328</p>
      </div>
    </div>

    <div class="video-slider__wrapper">
      <div class="swiper before-after-slider__wrapper video-slider__swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            {% if block.type == 'video_slide' %}
              <div class="swiper-slide">
                <div class="video-slider__slide">
                  <video
                    class="video-slider__video"
                    playsinline
                    preload="auto"
                    poster="{{ block.settings.poster_url }}"
                  >
                    <source src="{{ block.settings.video_url }}" type="video/mp4">
                  </video>
                  <button class="video-slider__slide-button" aria-label="Play video">
                    <img src="{{ 'play-button.png' | asset_url }}" width="80" height="80" alt="Play Button">
                  </button>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="before-after-slider__navigation video-slider__navigation">
          <div class="before-after-slider__pagination video-slider__pagination"></div>

          <div class="before-after-slider__btns">
            <button class="before-after-slider__btn video-slider__btn--prev">
              <svg width="30px" height="30px" viewBox="-19.04 0 75.804 75.804" xmlns="http://www.w3.org/2000/svg" fill="#000000">
                <path d="M833.068,460.252a1.5,1.5,0,0,1-1.061-2.561l33.557-33.56a2.53,2.53,0,0,0,0-3.564l-33.557-33.558a1.5,1.5,0,0,1,2.122-2.121l33.556,33.558a5.53,5.53,0,0,1,0,7.807l-33.557,33.56A1.5,1.5,0,0,1,833.068,460.252Z" fill="#525252"/>
              </svg>
            </button>
            <button class="before-after-slider__btn video-slider__btn--next">
              <svg width="30px" height="30px" viewBox="-19.04 0 75.804 75.804" xmlns="http://www.w3.org/2000/svg" fill="#000000">
                <path d="M833.068,460.252a1.5,1.5,0,0,1-1.061-2.561l33.557-33.56a2.53,2.53,0,0,0,0-3.564l-33.557-33.558a1.5,1.5,0,0,1,2.122-2.121l33.556,33.558a5.53,5.53,0,0,1,0,7.807l-33.557,33.56A1.5,1.5,0,0,1,833.068,460.252Z" fill="#525252"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
      {% for block in section.blocks %}
        {% if block.type == 'product' and block.settings.product %}
          <a class="before-after-slider__link button-dark" href="{{ block.settings.product.url }}">
            BUY VOLUFILINE Now
          </a>
        {% endif %}
      {% endfor %}
    </div>

    <div style="position: absolute; left: -9999px; height: 0; width: 0; overflow: hidden;">
      <h2>Video Testimonials on Fuller Cheeks and Eye Bags</h2>
      <h3>Can Volufiline really help with lips and hollow under eyes?</h3>
      <p>Watch real users share their results using Volufiline serum to restore youthful volume to cheeks, under-eyes, and lips. These before and after videos showcase how consistent application reduces eye bags, smooths smile lines, and gives a naturally plumper look.</p>
      <h4>Before and after video reviews of Volufiline serum</h4>
      <ul>
        <li>Improves fullness under the eyes</li>
        <li>Visibly enhances lips and smile lines</li>
        <li>Customer results with fuller cheeks and less sagging</li>
      </ul>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const videoSlider = new Swiper('.video-slider__swiper', {
      spaceBetween: 15,
      slidesPerView: 1.1,
      speed: 800,

      pagination: {
        el: '.video-slider__pagination',
        clickable: true,
        type: 'progressbar',
      },

      navigation: {
        nextEl: '.video-slider__btn--next',
        prevEl: '.video-slider__btn--prev',
      },

      breakpoints: {
        767: {
          spaceBetween: 15,
          slidesPerView: 2,
        },

        1023: {
          slidesPerView: 3,
        },

        1140: {
          spaceBetween: 15,
          slidesPerView: 3,
        },

        1480: {
          spaceBetween: 20,
          slidesPerView: 4,
        },
      },
    });

    const wrappers = document.querySelectorAll('.video-slider__slide');
    wrappers.forEach(function (wrapper) {
      const video = wrapper.querySelector('video');
      const button = wrapper.querySelector('.video-slider__slide-button');

      button.addEventListener('click', function () {
        if (video.paused || video.ended) {
          video.play();
        } else {
          video.pause();
        }
      });

      video.addEventListener('play', () => button.classList.add('playing'));
      video.addEventListener('pause', () => button.classList.remove('playing'));
      video.addEventListener('ended', () => button.classList.remove('playing'));
    });
  });
</script>

